<%= form_for(@topic) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">

    <%= f.label :Title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "input title" %>

    <%= f.label :Content %>
    <%= f.text_area :content, class: 'form-control', placeholder: "input content", rows:"10" %>

    <%= f.label :参考リンク %>
    <%= f.text_field :link, class: 'form-control', placeholder: "link" %>

    <% #TODO チェックボックスにする %>
    <div class="form-group">
      <p>Category</p>
      <div class="radio-inline">
        <%= f.radio_button :category, 'object' %> <%= f.label :category, '物' , :value => "object" %>
      </div>
      <div class="radio-inline">
        <%= f.radio_button :category, 'feeling' %> <%= f.label :category, '心情・気分' , :value => "feeling" %>
      <div class="radio-inline">
        <%= f.radio_button :category, 'event' %> <%= f.label :category, '出来事・状況' , :value => "event" %>
      </div>
      </div>
    </div>
    
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>