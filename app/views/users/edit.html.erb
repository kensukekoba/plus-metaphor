<div class="user_edit">
<h1>
    <% if @user.image? %>
        <%= image_tag @user.image_url, :size => '200x200' %>
    <% else %>
        <%= image_tag("/uploads/user/image/default/default.jpg") %>
    <% end %>
    <div class="user"><%= @user.name %></div>
</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :image, "プロフィール画像" %>
            <%= f.file_field :image %>
            
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
            
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
            
            <%= f.label :favo_phrase, "好きなメタファ" %>
            <%= f.text_field :favo_phrase, class: 'form-control' %>
            
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: 'form-control' %>
            
            <%= f.label :password_confirmation, "パスワードの確認" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
            
            <%= f.submit "ユーザ情報を更新する", class: "btn btn-large btn-primary" %>
        <% end %>
        
    </div>
</div>

<div class="col-md-6 col-md-offset-3">
<%= link_to "アカウント削除はこちら" , @user , method: :delete, data: { confirm: '削除してもよろしいですか？'} %>
</div>
</div>