<% if users.any? %>
    <ol class="follow_list"> 
        <% users.each do |user| %>
            <li>
                <div class="row no-margin">
                    <div class="col-xs-2 col-sm-1 no-padding">
                        <%= image_tag user.image_url(:thumb) %>
                    </div>
                    <div class="col-xs-10 col-sm-11">
                        <span class="user"><%= link_to user.name, user %></span><br />
                        <span class="content"><%= user.favo_phrase %></span>
                    </div>
                </div>
            </li>
        <% end %>
    </ol>    
<% end %>