<% metaphors.each do |metaphor| %>
<li>
    <span class="user"><%= link_to metaphor.user.name, metaphor.user %></span>
    <span class="timestamp">
        Created <%= time_ago_in_words(metaphor.created_at) %> ago.
    </span>
    <span class="content"><%= metaphor.content %></span>
    <span class="count">
    <%= metaphor.comments.count %> comments / 
    <%= metaphor.likes_count %> like. 
    </span>
    <% if current_user == metaphor.user %>
        <%= link_to "Delete", metaphor, method: :delete, data: { confirm: "You sure?"} %>
    <% end %>
    
    <span>
    <%= render 'likes/like', metaphor: metaphor %>
    
    <button type="button" class="btn btn-success btn-xs" data-toggle="collapse" data-target="#comment_list-<%= metaphor.id %>">Comment</button>
    </span>
    
    <div id="comment_list-<%= metaphor.id %>" class="collapse">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <% if logged_in? %>
                    <%= render 'shared/comment_form' , metaphor: metaphor %>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <ol class="metaphors">
                    <%= render 'comments/list' , comments: metaphor.comments %>
                </ol>
            </div>
        </div>
    </div>
</li>

<% end %>