<% comments.each do |comment| %>
<div class="row no-margin">
<li>
    <div class="col-sm-1 col-xs-2 no-padding">
    <% if comment.user.image? %>
        <%= image_tag comment.user.image_url(:thumb) %>
    <% else %>
        <%= image_tag("/uploads/user/image/default/default.jpg") %>
    <% end %>
    </div>
    
    <div class="col-sm-11 col-xs-10">
        <span class="user"><%= link_to comment.user.name, comment.user %></span>
        <span class="content"><%= comment.content %></span>
        <span class="timestamp">
            Created <%= time_ago_in_words(comment.created_at) %> ago.
        </span>
    </div>
</li>
</div>
<% end %>